@using Nest_BaskEnd_Project.ViewModel.Authorization
@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content pt-150 ">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-6 pr-30 d-none d-lg-block">
                        <img class="border-radius-15" src="~/assets/imgs/page/login-1.png" alt="" />
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Register</h1>
                                    <p class="mb-30">Create an account <a asp-action="Register">Register</a></p>
                                </div>
                                <form method="post">

                                    <div class="form-group">
                                        <input asp-for="UsernameOrEmail" placeholder="Username or Email" />
                                        <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="Password" placeholder="Your password *" />
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="chek-form">
                                        <div class="custome-checkbox">
                                            <input class="form-check-input" asp-for="RememberMe"  />
                                            <label class="form-check-label" asp-for="RememberMe"><span>Remember me</span></label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <span class="text-warning"><a asp-action="ChangePassword" >Change Password</a></span>
                                    </div>
                                    <div asp-validation-summary="ModelOnly"></div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-heading btn-block hover-up" name="login">Log in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
}

