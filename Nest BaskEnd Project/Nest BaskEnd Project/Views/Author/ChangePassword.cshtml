@model ChangeVM
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content pt-150 ">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-6 pr-30 d-none d-lg-block">
                        <img class="border-radius-15" src="~/assets/imgs/page/login-1.png" alt="" />
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Register</h1>
                                    <p class="mb-30">Create an account <a asp-action="Register">Register</a></p>
                                </div>
                                <form method="post">

                                    <div class="form-group">
                                        <input asp-for="OldPassword" placeholder="Old Password" />
                                        <span class="text-danger" asp-validation-for="OldPassword"></span>
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="NewPassword" placeholder="New Password *" />
                                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                                    </div>                                   
                                    <div asp-validation-summary="ModelOnly"></div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-heading btn-block hover-up" name="login">Edit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
}


