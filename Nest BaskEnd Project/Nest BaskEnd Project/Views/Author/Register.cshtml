@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content pt-150 ">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-6 pr-30 d-none d-lg-block">
                        <img class="border-radius-15" src="~/assets/imgs/page/login-1.png" alt="" />
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Login</h1>
                                    <p class="mb-30">Already have an account? <a asp-action="Login">Login</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group row">
                                        <div class="col">
                                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                            <span class="text-danger" asp-validation-for="FirstName"></span>
                                        </div>
                                        <div class="col">
                                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                            <span class="text-danger" asp-validation-for="LastName"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="UserName" placeholder="Username" />
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" placeholder="Email" />
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" placeholder="Your password *" />
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ConfirmPassword" placeholder="Confirm password *" />
                                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <div asp-validation-summary="ModelOnly"></div>
                                    
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-heading btn-block hover-up" name="login">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{ 
   <partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
}

